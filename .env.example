# =======================
#    Recommendation Service
# =======================

# The port your service listens on (default: 8080)
MOVIE_MATE_RECOMMENDATION_SERVICE_PORT=8080

# The OpenAPI docs/server URL (e.g., for ingress controller)
MOVIE_MATE_RECOMMENDATION_SERVICE_OPENAPI_SERVER_URL=https://your-ingress-url.example.com

# Allowed hosts for CORS / security
MOVIE_MATE_RECOMMENDATION_SERVICE_ALLOWED_HOSTS=your-frontend.example.com,localhost

# Health check path (for liveness/readiness probes)
MOVIE_MATE_RECOMMENDATION_SERVICE_HEALTH_PATH=/healthz

# Root API path (keep empty for Dapr compatibility)
MOVIE_MATE_RECOMMENDATION_SERVICE_ROOT_PATH=

# =======================
#    Service Discovery
# =======================

# Discovery server host/port
MOVIE_MATE_DISCOVERY_SERVER_HOST=mm-discovery-server
MOVIE_MATE_DISCOVERY_SERVER_PORT=8761
$MOVIE_MATE_RECOMMENDATION_SERVICE_LB_TAGS=

# Port for service registration (default: 3500 for Dapr)
MOVIE_MATE_RECOMMENDATION_SERVICE_REGISTRATION_PORT=3500

# Enable registration in discovery (true/false)
MOVIE_MATE_DISCOVERY_REGISTER=true

# =======================
#      Dapr / Kafka
# =======================

# Dapr pubsub component name (default: kafka-pubsub)
MOVIE_MATE_DAPR_PUBSUB_COMPONENT=kafka-pubsub

# Kafka topic for activity events
MOVIE_MATE_KAFKA_ACTIVITY_TOPIC=activity-events

# =======================
#        Neo4j
# =======================

MOVIE_MATE_NEO4J_URI=bolt://localhost:7687
MOVIE_MATE_NEO4J_USER=neo4j
MOVIE_MATE_NEO4J_PASSWORD=yourstrongpass
